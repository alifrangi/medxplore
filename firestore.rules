rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Admin check - checks for Firebase Auth users with admin email domain
    function isAdmin() {
      return request.auth != null && 
             request.auth.token.email != null &&
             (request.auth.token.email.matches('.*@medxplore\\.com'));
    }
    
    // Helper function to validate student data
    function isValidStudentData() {
      return request.resource.data.keys().hasAll(['fullName', 'email', 'university', 'passportNumber']) &&
             request.resource.data.fullName is string &&
             request.resource.data.email is string &&
             request.resource.data.university is string;
    }
    
    // Helper function to validate application data
    function isValidApplicationData() {
      return request.resource.data.keys().hasAll(['fullName', 'email', 'phone', 'university', 'yearOfStudy', 'major']) &&
             request.resource.data.fullName is string &&
             request.resource.data.email is string &&
             request.resource.data.phone is string &&
             request.resource.data.university is string &&
             request.resource.data.yearOfStudy is string &&
             request.resource.data.major is string;
    }
    
    // Students collection
    match /students/{passportNumber} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }
    
    // Applications collection
    match /applications/{applicationId} {
      allow create: if true;
      allow read, update, delete: if isAdmin();
    }
    
    // Events collection
    match /events/{eventId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }
    
    // Participations collection
    match /participations/{participationId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }
    
    // Admins collection
    match /admins/{adminId} {
      allow read: if true;
      allow write: if false;
    }
    
    // News collection
    match /news/{newsId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }
    
    // Workers collection (department workers - no Firebase Auth)
    match /workers/{workerId} {
      // Allow public read for worker authentication
      allow read: if true;
      
      // Allow workers to update their own session data (login/logout)
      // This allows updating only sessionToken, tokenExpiry, and lastLogin fields
      allow update: if request.resource.data.diff(resource.data).affectedKeys()
        .hasOnly(['sessionToken', 'tokenExpiry', 'lastLogin']);
      
      // Only admins can create or delete workers, or update other fields
      allow create: if isAdmin();
      allow delete: if isAdmin();
    }
    
    // Department collections
    match /departments/{departmentId} {
      // Public read for department info
      allow read: if true;
      
      // Only admins can manage departments
      allow create, update, delete: if isAdmin();
      
      // Department messages
      match /messages/{messageId} {
        // Allow anyone to read messages
        allow read: if true;
        // Allow anyone to create messages (workers and admins)
        allow create: if true;
        // Allow only the message sender to update their own messages or admins
        allow update: if isAdmin() || 
          (resource.data.senderId == request.resource.data.senderId);
        // Allow only admins or message sender to delete
        allow delete: if isAdmin() || 
          (resource.data.senderId == request.auth.uid);
      }
      
      // Department ideas
      match /ideas/{ideaId} {
        // Allow anyone to read ideas
        allow read: if true;
        // Allow anyone to create ideas
        allow create: if true;
        // Allow users to update their own ideas or admins
        allow update: if isAdmin() || 
          (resource.data.authorId == request.resource.data.authorId);
        // Allow users to delete their own ideas or admins
        allow delete: if isAdmin() || 
          (resource.data.authorId == request.auth.uid);
      }
      
      // Department files
      match /files/{fileId} {
        // Allow anyone to read files
        allow read: if true;
        // Allow anyone to create files (workers can upload without Firebase Auth)
        allow create: if true;
        // Allow anyone to delete files (access control handled at app level)
        // This is necessary because workers don't use Firebase Auth
        allow delete: if true;
        // Allow updates only by admins
        allow update: if isAdmin();
      }
    }
    
    // Other collections
    match /achievements/{achievementId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /tiers/{tierId} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}