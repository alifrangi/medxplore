rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // TEMPORARY admin check - restrict to specific email domains
    // Replace 'yourdomain.com' with your actual admin email domain
    function isAdmin() {
      return request.auth != null && 
             request.auth.token.email != null &&
             (request.auth.token.email.matches('.*@medxplore\\.com'));
    }
    
    // Helper function to validate student data
    function isValidStudentData() {
      return request.resource.data.keys().hasAll(['fullName', 'email', 'university', 'passportNumber']) &&
             request.resource.data.fullName is string &&
             request.resource.data.email is string &&
             request.resource.data.university is string;
    }
    
    // Helper function to validate application data
    function isValidApplicationData() {
      return request.resource.data.keys().hasAll(['fullName', 'email', 'phone', 'university', 'yearOfStudy', 'major']) &&
             request.resource.data.fullName is string &&
             request.resource.data.email is string &&
             request.resource.data.phone is string &&
             request.resource.data.university is string &&
             request.resource.data.yearOfStudy is string &&
             request.resource.data.major is string;
    }
    
    // Students collection
    match /students/{passportNumber} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }
    
    // Applications collection
    match /applications/{applicationId} {
      allow create: if true;
      allow read, update, delete: if isAdmin();
    }
    
    // Events collection
    match /events/{eventId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }
    
    // Participations collection
    match /participations/{participationId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }
    
    // Admins collection
    match /admins/{adminId} {
      allow read: if true;
      allow write: if false;
    }
    
    // News collection
    match /news/{newsId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }
    
    // Department codes collection (security-critical)
    match /departmentCodes/{departmentId} {
      // Allow read for code verification (but not list)
      allow read: if request.auth != null;
      
      // Only admins can create, update, or delete codes
      allow create, update, delete: if isAdmin();
    }
    
    // Workers collection (department workers - no Firebase Auth)
    match /workers/{workerId} {
      // Workers are read by the worker auth system and admin
      allow read: if isAdmin();
      
      // Only admins can create, update, or delete workers
      allow create, update, delete: if isAdmin();
    }
    
    // Department collections
    match /departments/{departmentId} {
      // Public read for department info
      allow read: if true;
      
      // Only admins can manage departments
      allow create, update, delete: if isAdmin();
      
      // Department messages
      match /messages/{messageId} {
        allow read, create, update, delete: if isAdmin();
      }
      
      // Department ideas
      match /ideas/{ideaId} {
        allow read, create, update, delete: if isAdmin();
      }
      
      // Department files
      match /files/{fileId} {
        allow read, create, update, delete: if isAdmin();
      }
    }
    
    // Other collections
    match /achievements/{achievementId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /tiers/{tierId} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}